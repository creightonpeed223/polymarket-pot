# Polymarket BTC Trading Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Polymarket Credentials (Required for live trading)
# ===========================================
# Your Polymarket wallet private key (hex string without 0x prefix)
POLYMARKET_PRIVATE_KEY=

# Your Polymarket funder/wallet address
POLYMARKET_FUNDER_ADDRESS=

# ===========================================
# Trading Settings
# ===========================================
# Maximum position size in USD per trade
MAX_POSITION_SIZE=100

# Maximum daily loss before trading stops (USD)
DAILY_LOSS_LIMIT=50

# Enable automatic trading based on signals (true/false)
AUTO_TRADE_ENABLED=false

# Minimum signal confidence to execute trades (0-100)
MIN_CONFIDENCE_THRESHOLD=70

# Stop loss percentage (position will be closed if loss exceeds this)
STOP_LOSS_PERCENT=10

# Cooldown between trades in seconds
COOLDOWN_SECONDS=300

# Maximum number of trades per day
MAX_DAILY_TRADES=10

# ===========================================
# Paper Trading (Recommended to start)
# ===========================================
# Enable paper trading mode (true/false)
# When true, no real trades are executed
PAPER_TRADING=true

# Starting balance for paper trading (USD)
PAPER_BALANCE=1000

# ===========================================
# Server Settings
# ===========================================
# Host to bind the server to
HOST=127.0.0.1

# Port to run the server on
PORT=8000

# ===========================================
# Data Settings
# ===========================================
# Default timeframe for charts (1m, 5m, 15m, 1h, 4h, 1d)
DEFAULT_TIMEFRAME=15m

# Number of candles to fetch for analysis
PRICE_HISTORY_LIMIT=500

# ===========================================
# ML Settings
# ===========================================
# How often to retrain the ML model (seconds)
ML_RETRAIN_INTERVAL=3600

# Number of periods for ML feature lookback
ML_LOOKBACK_PERIODS=100
