# ===========================================
# POLYMARKET SPEED TRADING BOT - CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# POLYMARKET WALLET (Required for live trading)
# ------------------------------------------
# Your Polymarket wallet private key
# Get this from your wallet export
POLYMARKET_PRIVATE_KEY=

# Your wallet address (funder address)
POLYMARKET_FUNDER_ADDRESS=

# ------------------------------------------
# TRADING SETTINGS
# ------------------------------------------
# Starting capital for position sizing
STARTING_CAPITAL=10000

# Maximum position size in USD
MAX_POSITION_USD=2500

# Maximum position as % of capital (0.25 = 25%)
MAX_POSITION_PCT=0.25

# Minimum edge to take a trade (0.30 = 30%)
MIN_EDGE=0.30

# Maximum daily loss before stopping (USD)
MAX_DAILY_LOSS=2000

# Maximum concurrent positions
MAX_CONCURRENT=3

# Enable automatic trading (true/false)
# Set to false to receive alerts only
AUTO_TRADE=true

# Paper trading mode (true/false)
# START WITH THIS SET TO TRUE!
PAPER_TRADING=true

# ------------------------------------------
# ALERTS - Telegram (Recommended)
# ------------------------------------------
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your chat ID (send /start to @userinfobot to get it)
TELEGRAM_CHAT_ID=

# ------------------------------------------
# ALERTS - Discord (Alternative)
# ------------------------------------------
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=

# ------------------------------------------
# TWITTER API (Optional - $100/month)
# ------------------------------------------
# Twitter API Bearer Token for faster political news
TWITTER_BEARER_TOKEN=

# ------------------------------------------
# LOGGING
# ------------------------------------------
LOG_LEVEL=INFO
